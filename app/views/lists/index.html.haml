%p#notice= notice
%h1 Lists
%table
  %thead
    %tr
      %th Heading
      %th Sub heading
      %th Description
      %th User
      %th{:colspan => "3"}
  %tbody
    - @lists.each do |list|
      %tr
        %td= list.heading
        %td= list.sub_heading
        %td= list.description
        %td= list.user
        %td= link_to 'Show', list
        %td= link_to 'Edit', edit_list_path(list)
        %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New List', new_list_path
