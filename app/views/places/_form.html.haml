= form_with(model: place, local: true) do |form|
  - if place.errors.any?
    #error_explanation
      %h2
        = pluralize(place.errors.count, "error")
        prohibited this place from being saved:
      %ul
        - place.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name, id: :place_name
  .field
    = form.label :address
    = form.text_field :address, id: :place_address
  .field
    = form.label :heading
    = form.text_field :heading, id: :place_heading
  .field
    = form.label :description
    = form.text_field :description, id: :place_description
  .field
    = form.label :latitude
    = form.text_field :latitude, id: :place_latitude
  .field
    = form.label :longitude
    = form.text_field :longitude, id: :place_longitude
  .field
    = form.label :list_id
    = form.text_field :list_id, id: :place_list_id
  .actions
    = form.submit
